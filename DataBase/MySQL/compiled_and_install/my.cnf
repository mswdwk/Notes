[general]
instance_num = 1
[mysqld]
bind_address=0.0.0.0
port=3310
sync_binlog=1
innodb_flush_log_at_trx_commit=1
transaction_isolation=READ-COMMITTED
slow_query_log=on
long_query_time=0.6
basedir=/home/mysql2/MySQL5.7
datadir=/home/mysql2/MySQL5.7/data/data
innodb_data_file_path=ibdata1:300M:autoextend
innodb_data_home_dir=/home/mysql2/MySQL5.7/data/data
innodb_undo_directory=/home/mysql2/MySQL5.7/data/undo
innodb_log_group_home_dir=/home/mysql2/MySQL5.7/data/redo
innodb_lock_wait_timeout=10
innodb_print_all_deadlocks=ON
innodb-file-per-table
innodb_io_capacity=1000 # for ssd disk, as for hdd disk ,this is 200 by default
innodb_io_capacity_max=2000 # for ssd disk , iops
log-bin=../binlog/mysql-bin
binlog_format=ROW
max_binlog_size=104857600
relay-log=../relaylog/relay-bin
log-error=/home/mysql2/MySQL5.7/log/mysqld1.log
pid-file=/home/mysql2/MySQL5.7/mysqld1.pid
tmpdir=/home/mysql2/MySQL5.7/data/tmp
socket=/home/mysql2/MySQL5.7/bin/mysql1.sock
server_id=1
gtid_mode=on
enforce_gtid_consistency=on
#defaults_file=/home/mysql2/MySQL5.7/etc/my.cnf

binlog_ignore_db=sys, mysql,performance_schema,information_schema ;日志记录忽略那些数据库的
binlog_do_db = testdb
expire_logs_days=7

[client]
socket=/home/mysql2/MySQL5.7/bin/mysql1.sock
port=3310
