set nu
syntax on
set paste
set cursorcolumn
set cursorline
" 打开 24 位真彩色支持
set termguicolors
" 搜索的时候忽略大小字字母
set ignorecase
" 若搜索内容中有大写字母，则不再忽略大小写
set smartcase
" 高亮第80列
set colorcolumn=80
" 高亮光标所在行
set cursorline

call plug#begin('~/.vim/plugged')
Plug 'itchyny/lightline.vim'
Plug 'fatih/vim-go',{ 'do': ':GoInstallBinaries' }
call plug#end()
